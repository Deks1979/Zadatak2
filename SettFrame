    private void colorActionPerformed(java.awt.event.ActionEvent evt) {                                      
       JColorChooser cc = new JColorChooser();  
      JDialog dialog = JColorChooser.createDialog(cc, "IZABERI BOJU", true, cc, new ActionListener() {  
        @Override  
        public void actionPerformed(ActionEvent ae) {  
          Color c = cc.getColor();  
          color_label.setText("BOJA  JE IZABRANA");  
          color_label.setOpaque(true);  
          color_label.setBackground(c);  
        }  

       

      },null);  
      dialog.setVisible(true);   
    }                                     

    private void startActionPerformed(java.awt.event.ActionEvent evt) {                                      
    Colorclass.startTheColor();
    
    }                                     

